{{#partial "contenido"}}

	<title>Filtro Empresas</title>
	<p class="title">Empresas filtradas</p>


	{{#if}}
		<table class="table table-dark">
			<tr>
				<th class="ppal">Nombre</th>
				<th class="ppal">Ver</th>
				<th class="ppal">Borrar</th>
			</tr>
			
			{{#each}}
				<tr>
					<td>{{name}}</td>
					<td><a class="fa fa-eye" href="filter/{{id}}"></a></td>
					<td><a class="fa fa-trash-o clickable" onclick="eraseEnterprise({{id}})"></a></td>				
				</tr>
			{{/each}}
		</table>
	{{else}}
		<div class="alert alert-danger" role="alert">
  			No hay empresas para mostrar
		</div>
	{{/if}}
			<form>
		<input class="btn btn-warning" type="submit" style="float: left;" value="Volver" formaction="/enterprises">
	</form>
{{/partial}}

{{>layout.hbs}}