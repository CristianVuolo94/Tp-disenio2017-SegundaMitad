{{#partial "contenido"}}
	
<body>
	<script src = "/js/validateChkBox.js" type="text/javascript"></script>
	<link rel="stylesheet" href="/css/indicators.css">	
	<link rel="stylesheet" href="/css/tables.css">
	
	
		
	<title>Indicadores</title>
	<p class="title">Indicadores</p>
			
	{{#if}}		
		
			<div class="row">	
			<form>				
					<div class="col-sm-2">										
						<input type="text" name="name" placeholder="Nombre Indicador" required>
					</div>
					<div class="col-sm-2">
						<input class="btn btn-evaluate" type="submit" value="Filtrar"  formaction="/indicators/filter"></br></br>
					</div>
					<div style="margin-left:89%;">
						<button class="btn btn-newIndicator" type="submit" form="form1" formaction="indicators/new">Nuevo Indicador</button><br/><br/>
					</div>
				</div>		
			</form>
			<form>
			<table class="table table-dark">
				<tr>
					<th class="ppal">Nombre</th>
					<th class="ppal">Fórmula</th>
					<th class="ppal">Editar</th>
					<th class="ppal">Borrar</th>
					<th class="ppal"></th>
				</tr>
				
				{{#each}}
					<tr>
						<td>{{name}}</td>
						<td>{{formula}}</td>	
						<td><a class="fa fa-pencil" href="indicators/{{id}}/edit"></a></td>
						<td><a class="fa fa-trash-o" onclick="eraseIndicator({{id}})"></a></td>
						<td><input type="checkbox" name="selected" value={{name}} ></td>	
					</tr>
				{{/each}}
			</table>	
			
			
			
			<div class="container evaluate-container">
				<p class="title2">Analizar empresas para los indicadores seleccionados</p>
				<br>
				
				<div class="row">
					<div class="col-sm-2">
						<label class="newIndicatorLbl">Especificar año:</label>	
					</div>	
					<div class="col-sm-2">										
						<input type="number" name="quantity" min="1900" max="2018" required>
					</div>
					<div class="col-sm-2">
						<input class="btn btn-evaluate" type="submit" value="Analizar Empresas" id="checkBtn" formaction="/indicators/evaluate">
					</div>
				</div>				
			</div>
			</form>	
		
	{{else}}
		<form>	
		<div class="alert alert-danger" role="alert">
  			No hay indicadores para mostrar
		</div>
			<button class="btn btn-noIndicator" type="submit" formaction="indicators/new">Nuevo Indicador</button> 	
		</form>		
	{{/if}}
	<form  id="form1"> 	
    </form>
	
	
	
</body>
{{/partial}}

{{>layout.hbs}}